{% extends "/shared/index.html.twig" %}
{% block style %}
<style>
    html {
        margin: 0px;
        height: 100%;
        width: 100%;
    }

    body {
        margin: 0px;
        min-height: 100%;
        width: 100%;
        display: grid;
        place-items: center;
        margin-top: -10rem;
    }

    .container {
        width: 20rem;
        height: 20rem;
        display: flex;
        flex-direction: column;
        row-gap: 20px;

        user-select: none;
    }

    .container button {
        height: 30px;
        text-transform: uppercase;
        font-weight: bold;
        font-family: monospace;
        font-size: 12pt;
        cursor: pointer;
    }

    .container label {
        font-family: Arial, Helvetica, sans-serif;
        display: flex;
        flex-direction: column;
        font-size: 12pt;
    }

    .container label span {
        font-size: 10pt;
        color: brown;
        padding: 5px 0px;
    }

    .container label input {
        height: 25px;
        border: 1px solid black;
        border-radius: 3px;
    }

    .register {
        font-size: 13pt;
        font-family: Arial, Helvetica, sans-serif;
    }
</style>
{% endblock %}

{% block body %}

<form method="post" action="/login" class="container">
    <label>
        Username:
        <input type="text" name="username" value="{{ username }}" />

        {% if errors.username %}
        <span>{{errors.username}}</span>
        {% endif %}
    </label>
    <label>
        Password:
        <input type="password" name="password" value="{{ password }}" />
        {% if errors.password %}
        <span>{{errors.password}}</span>
        {% endif %}
    </label>
    <button type="submit">Submit</button>
    <a href="/register">Register</a>
</form>
{% endblock %}